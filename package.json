{
  "name": "JodelJS",
  "description": "Jodel webapp",
  "dependencies": {
    "babel-polyfill": "~6.22.0",
    "classnames": "~2.2.5",
    "immutable": "~3.8.1",
    "nprogress": "~0.2.0",
    "react": "~15.4.2",
    "react-document-title": "~2.0.2",
    "react-dom": "~15.4.2",
    "react-redux": "~5.0.2",
    "redux": "~3.6.0",
    "redux-thunk": "~2.2.0",
    "superagent": "~3.4.1"
  },
  "devDependencies": {
    "babel-cli": "~6.22.2",
    "babel-plugin-transform-react-constant-elements": "~6.22.0",
    "babel-plugin-transform-react-inline-elements": "~6.22.0",
    "babel-preset-es2015": "~6.22.0",
    "babel-preset-react": "~6.22.0",
    "babel-preset-stage-0": "~6.22.0",
    "babelify": "~7.3.0",
    "browserify": "~14.0.0",
    "envify": "~4.0.0",
    "fsmonitor": "~0.2.4",
    "less": "~2.7.2",
    "less-plugin-autoprefix": "~1.5.1",
    "less-plugin-clean-css": "~1.5",
    "less-plugin-npm-import": "~2.1.0",
    "normalize.css": "~5.0.0",
    "npm-check-updates": "~2.10.2",
    "uglify-js": "~2.7.5",
    "watchify": "~3.9.0"
  },
  "scripts": {
    "start": "mkdir -p build-debug && cp -r img build-debug/ && cp src/index.htm build-debug/ && npm run watch-js & npm run watch-css",
    "watch-js": "watchify -o build-debug/main.js -v -d src/app/main.js",
    "watch-css": "fsmonitor -s -p -d style/ lessc --npm-import --autoprefix=\"> 0.5%\" style/main.less build-debug/main.css",
    "build": "mkdir -p build && cp -r img build/ && cp src/index.htm build/ && npm run build-css & npm run build-js",
    "build-js": "NODE_ENV=production browserify src/app/main.js | uglifyjs -cm > build/main.js",
    "build-css": "lessc --clean-css=\"--s1 --advanced\" --npm-import --autoprefix=\"> 0.5%\" style/main.less build/main.css",
    "updatepackages": "ncu -u -a"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "stage-0",
            "react"
          ],
          "plugins": [
            "transform-react-inline-elements",
            "transform-react-constant-elements"
          ]
        }
      ],
      "envify"
    ]
  }
}
