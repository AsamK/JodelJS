{
  "name": "JodelJS",
  "description": "Jodel webapp",
  "dependencies": {
    "classnames": "~2.2.5",
    "babel-polyfill": "~6.13.0",
    "react": "~15.3.0",
    "react-document-title": "~2.0.2",
    "react-dom": "~15.3.0",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "superagent": "^2.1.0"
  },
  "devDependencies": {
    "babel-cli": "~6.11.4",
    "babel-plugin-transform-react-constant-elements": "~6.9.1",
    "babel-plugin-transform-react-inline-elements": "~6.8.0",
    "babel-preset-es2015": "~6.13.2",
    "babel-preset-react": "~6.11.1",
    "babel-preset-stage-0": "~6.5.0",
    "babelify": "~7.3.0",
    "browserify": "~13.1.0",
    "envify": "~3.4.1",
    "fsmonitor": "~0.2.4",
    "less": "~2.7.1",
    "less-plugin-autoprefix": "~1.5.1",
    "less-plugin-clean-css": "~1.5",
    "less-plugin-npm-import": "~2.1.0",
    "normalize.css": "~4.2.0",
    "npm-check-updates": "~2.8.0",
    "uglify-js": "~2.7.0",
    "watchify": "~3.7.0"
  },
  "scripts": {
    "start": "npm run watch-js & npm run watch-css",
    "watch-js": "watchify -o build-debug/main.js -v -d src/app/main.js",
    "watch-css": "fsmonitor -s -p -d style/ lessc --npm-import --autoprefix=\"> 0.5%\" style/main.less build-debug/main.css",
    "build": "npm run build-css & npm run build-js",
    "build-js": "NODE_ENV=production browserify src/app/main.js | uglifyjs -cm > build/main.js",
    "build-css": "lessc --clean-css=\"--s1 --advanced --compatibility=ie8\" --npm-import --autoprefix=\"> 0.5%\" style/main.less build/main.css",
    "updatepackages": "ncu -u -a"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "stage-0",
            "react"
          ],
          "plugins": [
            "transform-react-inline-elements",
            "transform-react-constant-elements"
          ]
        }
      ],
      "envify"
    ]
  }
}
